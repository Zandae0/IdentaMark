<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="loginpage.LoginFragment">


    <!-- Black Section -->
    <LinearLayout
        android:id="@+id/layoutBlackSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dark_gray"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TextView di Tengah Atas -->
            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivonarrowbold"
                android:gravity="center"
                android:text="@string/image_watermark_extraction"
                android:textColor="@color/teal_terang"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvDeskripsi" />

            <!-- TextView deskripsi -->
            <TextView
                android:id="@+id/tvDeskripsi"
                android:layout_width="210dp"
                android:layout_height="47dp"
                android:fontFamily="@font/archivonarrowitalic"
                android:gravity="center"
                android:text="@string/extraction_image"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHeader" />

            <!-- TextView di Tengah Bawah -->
            <TextView
                android:id="@+id/tvChoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivonarrowbold"
                android:gravity="center"
                android:text="@string/extraction_follow"
                android:textColor="@color/teal_terang"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- Back -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back_arrow"
        android:backgroundTint="@color/white"
        android:contentDescription="Back Button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="15dp" />

    <ImageView
        android:id="@+id/ivInfo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/info"
        android:backgroundTint="@color/white"
        android:contentDescription="Back Button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="15dp"
        app:tint="@color/white"/>
    <!-- White Section -->
    <LinearLayout
        android:id="@+id/layoutWhiteSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/hijau_di_welcomepage"
        android:padding="24dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.70"
        app:layout_constraintTop_toBottomOf="@id/layoutBlackSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- image -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Step 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardStep1"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:elevation="6dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.4">

                <LinearLayout
                    android:id="@+id/layoutstep1exim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <!-- Icon -->
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/choose_an_image"
                        app:tint="@color/black"/>
                    <!-- Text -->
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/extraction_file"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/archivonarrowbold"
                        android:gravity="center" />
                </LinearLayout>

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/hitam_transparant"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/imagePreviewStep1Exim"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 1"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/archivonarrowbold"
                app:layout_constraintTop_toBottomOf="@id/cardStep1"
                app:layout_constraintStart_toStartOf="@id/cardStep1"
                app:layout_constraintEnd_toEndOf="@id/cardStep1" />

            <!-- Step 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardStep2"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:elevation="6dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <!-- FrameLayout untuk menumpuk teks & arrow dalam ImageView -->
                    <FrameLayout
                        android:id="@+id/methodexim"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center">

                        <!-- Background Image -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/hitam_pilihmetode" />

                        <!-- Text "Select a Method" di atas Image -->
                        <TextView
                            android:id="@+id/tvSelectMethodExim"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/extraction_method_select"
                            android:layout_marginEnd="14dp"
                            android:textColor="@android:color/white"
                            android:alpha="0.8"
                            android:textSize="12sp"
                            android:fontFamily="@font/archivonarrowbold"
                            android:gravity="center"
                            android:layout_gravity="center"/>

                        <!-- Arrow Down -->
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/arrow_down"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/white"/>
                    </FrameLayout>

                    <!-- Text "Choose an Image" di luar ImageView -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/extraction_method"
                        android:layout_marginTop="24dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/archivonarrowbold"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 2"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/archivonarrowbold"
                app:layout_constraintTop_toBottomOf="@id/cardStep2"
                app:layout_constraintStart_toStartOf="@id/cardStep2"
                app:layout_constraintEnd_toEndOf="@id/cardStep2"
                android:visibility="gone"/>
            <!-- Step 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardStep3"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:elevation="6dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.4">

                <LinearLayout
                    android:id="@+id/layoutstep3exim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/imagePreviewStep3exim"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/preview" />
                    <!-- Text -->
                    <TextView
                        android:id="@+id/success_extraction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/success_extract"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:fontFamily="@font/archivonarrowbold"
                        android:gravity="center"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 2"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/archivonarrowbold"
                app:layout_constraintTop_toBottomOf="@id/cardStep3"
                app:layout_constraintStart_toStartOf="@id/cardStep3"
                app:layout_constraintEnd_toEndOf="@id/cardStep3" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TextView -->
        <TextView
            android:id="@+id/tvAdditionalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/extraction_wait"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:fontFamily="@font/archivonarrowitalic"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <!-- Button -->
        <Button
            android:id="@+id/btn_process"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Process"
            android:background="@drawable/button_hitam"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/archivonarrowbold" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
