<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 3"
        android:fontFamily="@font/archivonarrowbold"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"/>

    <!-- RadioGroup for Parameters -->
    <RadioGroup
        android:id="@+id/radioGroupParams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- RadioButtons will be added dynamically based on attackType -->
        <!-- Example RadioButton, will be added dynamically in Kotlin code -->
        <!-- <RadioButton android:id="@+id/radioParam1" android:text="3000" /> -->

    </RadioGroup>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnConfirmParams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"/>
</LinearLayout>
