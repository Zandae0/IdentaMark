<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="loginpage.LoginFragment">


    <!-- Black Section -->
    <LinearLayout
        android:id="@+id/layoutBlackSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dark_gray"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TextView di Tengah Atas -->
            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivonarrowbold"
                android:gravity="center"
                android:text="@string/welcome_page"
                android:textColor="@color/teal_terang"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvDeskripsi" />

            <!-- TextView deskripsi -->
            <TextView
                android:id="@+id/tvDeskripsi"
                android:layout_width="250dp"
                android:layout_height="47dp"
                android:fontFamily="@font/archivonarrowitalic"
                android:gravity="center"
                android:text="@string/deskripsi_dashboard"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHeader" />

            <!-- TextView di Tengah Bawah -->
            <TextView
                android:id="@+id/tvChoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivonarrowbold"
                android:gravity="center"
                android:text="@string/choose_media"
                android:textColor="@color/teal_terang"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <!-- White Section -->
    <LinearLayout
        android:id="@+id/layoutWhiteSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/hijau_di_welcomepage"
        android:padding="24dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.70"
        app:layout_constraintTop_toBottomOf="@id/layoutBlackSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- image -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- CardView Image -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardImage"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:elevation="6dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <!-- Icon -->
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/image"
                        app:tint="@color/black"/>

                    <!-- Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/Image"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/archivonarrowbold"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- CardView Audio -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAudio"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:elevation="6dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <!-- Icon -->
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/audio"
                        app:tint="@color/black"/>

                    <!-- Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/Audio"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/archivonarrowbold"
                        android:gravity="center" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvAdditionalText"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/boss"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/archivonarrowbold"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <!-- Steps Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <!-- Step 1 -->
            <LinearLayout
                android:id="@+id/step1"
                android:layout_width="100dp"
                android:layout_height="73dp"
                android:gravity="center"
                android:background="@drawable/step"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Text Content -->
                    <TextView
                        android:id="@+id/step1_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="3dp"
                        android:fontFamily="@font/archivonarrowitalic"
                        android:gravity="center"
                        android:text="@string/step1"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/step1_number"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <!-- Number -->
                    <TextView
                        android:id="@+id/step1_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/archivonarrowbold"
                        android:gravity="end"
                        android:text="1"
                        android:textColor="@color/teal_terang"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


            <!-- Step 2 -->
            <LinearLayout
                android:id="@+id/step2"
                android:layout_width="100dp"
                android:layout_height="73dp"
                android:gravity="center"
                android:background="@drawable/step"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/step1"
                app:layout_constraintEnd_toStartOf="@+id/step3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Text Content -->
                    <TextView
                        android:id="@+id/step2_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="3dp"
                        android:fontFamily="@font/archivonarrowitalic"
                        android:gravity="center"
                        android:text="@string/step2"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/step2_number"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <!-- Number -->
                    <TextView
                        android:id="@+id/step2_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/archivonarrowbold"
                        android:gravity="end"
                        android:text="2"
                        android:textColor="@color/teal_terang"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!-- Step 3 -->
            <LinearLayout
                android:id="@+id/step3"
                android:layout_width="100dp"
                android:layout_height="73dp"
                android:gravity="center"
                android:background="@drawable/step"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Text Content -->
                    <TextView
                        android:id="@+id/step3_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="3dp"
                        android:fontFamily="@font/archivonarrowitalic"
                        android:gravity="center"
                        android:text="@string/step3"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/step3_number"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <!-- Number -->
                    <TextView
                        android:id="@+id/step3_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/archivonarrowbold"
                        android:gravity="end"
                        android:text="3"
                        android:textColor="@color/teal_terang"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/step4"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/step"
            android:layout_gravity="center_horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Text Content -->
                <TextView
                    android:id="@+id/step4_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/archivonarrowitalic"
                    android:gravity="center"
                    android:text="@string/step4"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/step4_number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Number -->
                <TextView
                    android:id="@+id/step4_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/archivonarrowbold"
                    android:gravity="end"
                    android:text="4"
                    android:textColor="@color/teal_terang"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
